{
	"compilerOptions": {
		"target"           : "ESNext",
		"lib"              : ["DOM", "ES2021", "ESNext"],
		"declaration"      : true,
		"declarationDir"   : "./defs/",
		"module"           : "commonjs",
		"outDir"           : "dist",
		"resolveJsonModule": true,
		"sourceMap"        : true,
		"strict"           : true,
		"types"            : ["jest", "node"]
	},
	"include"        : [
		"./src/**/*"
	],
	"exclude"        : [
		"node_modules",
		"dist"
	]
}
